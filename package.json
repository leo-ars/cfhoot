{
	"name": "cfhoot",
	"version": "1.0.0",
	"description": "A Kahoot-style real-time quiz game built on Cloudflare Workers with Durable Objects and KV",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"deploy": "npm run build && wrangler deploy",
		"dev": "concurrently \"wrangler dev\" \"vite --port 5173\"",
		"dev:worker": "wrangler dev",
		"dev:frontend": "vite",
		"start": "wrangler dev",
		"test": "vitest",
		"cf-typegen": "wrangler types"
	},
	"cloudflare": {
		"bindings": {
			"GAME": {
				"description": "Durable Object for managing real-time game sessions with WebSocket connections"
			},
			"QUIZZES": {
				"description": "KV namespace for storing saved quizzes that can be reused across games"
			}
		}
	},
	"dependencies": {
		"@tanstack/react-query": "^5.62.0",
		"@tanstack/react-router": "^1.93.0",
		"@tanstack/react-store": "^0.7.0",
		"lucide-react": "^0.468.0",
		"qrcode.react": "^4.2.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.8.19",
		"@types/node": "^25.0.3",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@vitejs/plugin-react": "^4.3.4",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.1.0",
		"postcss": "^8.4.49",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.5.2",
		"vite": "^6.0.5",
		"vitest": "~3.2.0",
		"wrangler": "^4.54.0"
	}
}
